<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tictac_png"
    tools:context=".AddPlayers">

    <TextView
        android:id="@+id/textviewtic"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:adjustViewBounds="true"
        android:textColor="#8D239F"
        android:textSize="40dp"
        android:textStyle="bold"

   />

    <TextView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/playername"
        android:text="Enter Players \n Name "
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/gradient_drawable"
/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ximage"
        android:id="@+id/img_x"
android:background="#7E338C"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="80dp"
/>

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:hint="Player One"
        android:background="#7E338C"
        android:textColor="#400F49"
        android:textSize="30dp"
        android:id="@+id/playername1"
        android:gravity="center"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="120dp"
        />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#7E338C"
      android:id="@+id/o_img"
        android:src="@drawable/oimage"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="80dp"
        />

    <EditText
        android:inputType="text"
        android:maxLines="1"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:hint="Player Two"
        android:background="#7E338C"
        android:textColor="#400F49"
        android:textSize="30dp"
        android:id="@+id/playername2"
        android:gravity="center"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="120dp"
        />

   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:text=" Start Game"
       android:textSize="25dp"
       android:gravity="center"
       android:background="@drawable/round_corner"
       android:layout_marginLeft="60dp"
       android:layout_marginRight="60dp"
       android:textColor="#25052B"
       android:layout_marginTop="600dp"
        android:id="@+id/startgamebutton"
       />
</RelativeLayout>